<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantallaprin"
    android:background="#7798ff">

    <LinearLayout
        android:id="@+id/cnst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="600dp">

        <Button
            android:id="@+id/btninicio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/imgcasa"/>

        <Button
            android:id="@+id/btnGenerarQR"
            android:layout_width="60dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp"
            android:background="@drawable/imgqr"/>

        <Button
            android:id="@+id/btnrecargar"
            android:layout_width="60dp"
            android:layout_marginLeft="25dp"
            android:layout_height="60dp"
            android:background="@drawable/imgpeso"/>

        <Button
            android:id="@+id/btnsalir"
            android:layout_width="60dp"
            android:layout_marginLeft="20dp"
            android:layout_height="60dp"
            android:background="@drawable/imgsalir"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/cnst">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textAlignment="center" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Generar QR"
            android:textAlignment="center" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Recargar"
            android:textAlignment="center" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Salir"
            android:textAlignment="center" />

    </LinearLayout>


    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="ULTIMO INGRESO:"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtultimoingreso"
        android:layout_marginVertical="80dp"
        android:textAlignment="center"
        android:text="02/04/2020"
        android:visibility="invisible"/>

</RelativeLayout>