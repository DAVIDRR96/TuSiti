<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaRecargar2"
    android:background="#7798ff">
    <TextView
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ESCOGE UN MONTO A RECARGAR:"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/L">
            <CheckBox
                android:id="@+id/Mil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$1.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Dosmil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$2.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Tresmil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$3.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Cuatromil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$4.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Cincomil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$5.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Diezmil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$10.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Veintemil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$20.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>
            <CheckBox
                android:id="@+id/Cincuentamil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$50.000"
                android:textColor="#ffffff"
                android:layout_marginHorizontal="@android:dimen/app_icon_size"/>

        </LinearLayout>

            <Button
                android:id="@+id/btnPagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/L"
                android:text="PROCEDER AL PAGO"
                android:background="#33cd77"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>